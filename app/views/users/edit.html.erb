<p id="notice"></p>
<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>

 <div class="field">
 <% if @user.errors.any? %>
 <div id="error_explanation">
  <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
  <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
 </div>
</div>
 <% end %>

  <%= form_with model: @user, local:true do |f| %>
    <div class="form-group">
     <label for="user_title">Name</label>
      <p><%= f.text_field :name, class: "form-control" %></p>
    </div>
    <div class="form-group">
      <label for="book_opinion">Image</label>
      <p><%= f.attachment_field :profile_image %></p>
    </div>
    <div>
      <label for="user_introduction">Introduction</label>
      <p><%= f.text_area :introduction, class: "form-control" %></p>
    </div>
    <div class="form-group">
         <%= f.submit 'Update User',class: "btn btn-secondary" %>
    </div>
  <% end %>
   </div>
  </div>
</div>
